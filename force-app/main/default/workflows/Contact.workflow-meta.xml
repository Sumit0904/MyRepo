    <rules>
        <fullName>Contact Creation Notification</fullName>
        <actions>
            <name>Contact_Creation_Notification_Action</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Contact.Email</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Contact.Phone</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Contact.Title</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>Contact field Update</fullName>
        <actions>
            <name>Field_update_Value</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <booleanFilter>1 OR 2</booleanFilter>
        <criteriaItems>
            <field>Contact.LeadSource</field>
            <operation>equals</operation>
            <value>Web</value>
        </criteriaItems>
        <criteriaItems>
            <field>Contact.Email</field>
            <operation>contains</operation>
            <value>@gmail.com</value>
        </criteriaItems>
        <description>This is demo workflow rule for field update</description>
        <triggerType>onAllChanges</triggerType>
    </rules>
